<odoo>
    <data>
        <record model="ir.ui.view" id="le_course_list">
            <field name="name">course list</field>
            <field name="model">le.course</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="lesson_ids"/>
                    <field name="subject_ids"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="le_course_form">
            <field name="name">course form</field>
            <field name="model">le.course</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_create_group" string="Create" type="object" class="btn-primary"/>
                        <button name="action_open" string="Open" type="object" class="btn-warning" invisible="status != 'draft' and status!= 'closed' "/>
                        <button name="action_closed" string="Close" type="object" class="btn-danger" invisible="status != 'open'"/>
                        <button name="action_draft" string="draft" type="object" class="btn-success"/>
                    </header>
                    <sheet>
                        <field name="name"/>
                        <field name="subject_ids" widget="many2many_tags"/>
                        <field name="status"/>
                        <notebook>
                            <page string="Lesssons">
                                <field name="lesson_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="homework_ids"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="le_course_action" model="ir.actions.act_window">
            <field name="name">course</field>
            <field name="res_model">le.course</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="course_menu" action="le_course_action"/>
    </data>
</odoo>