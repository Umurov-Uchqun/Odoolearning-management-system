<odoo>
    <data>
        <record model="ir.ui.view" id="le_subject_list">
            <field name="name">subject list</field>
            <field name="model">le.subject</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="le_subject_form">
            <field name="name">subject form</field>
            <field name="model">le.subject</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name"/>
                </form>
            </field>
        </record>

        <record id="le_subject_action" model="ir.actions.act_window">
            <field name="name">subject</field>
            <field name="res_model">le.subject</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="subject_menu" action="le_subject_action"/>
    </data>
</odoo>