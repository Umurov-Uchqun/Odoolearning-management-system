<odoo>
    <data>
        <record model="ir.ui.view" id="le_group_student_list">
            <field name="name">group student list</field>
            <field name="model">le.group.student</field>
            <field name="arch" type="xml">
                <list>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="le_group_student_form">
            <field name="name">group student form</field>
            <field name="model">le.group.student</field>
            <field name="arch" type="xml">
                <form>
                    <field name="status"/>
                </form>
            </field>
        </record>

        <record id="le_group_student_action" model="ir.actions.act_window">
            <field name="name">group student</field>
            <field name="res_model">le.group.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="group_student_menu" action="le_group_student_action"/>
    </data>
</odoo>