<odoo>
    <data>
        <record model="ir.ui.view" id="le_schedule_lesson_list">
            <field name="name">schedule lesson list</field>
            <field name="model">le.schedule.lesson</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="le_schedule_lesson_form">
            <field name="name">schedule lesson form</field>
            <field name="model">le.schedule.lesson</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name"/>
                </form>
            </field>
        </record>

        <record id="le_schedule_lesson_action" model="ir.actions.act_window">
            <field name="name">schedule lesson</field>
            <field name="res_model">le.schedule.lesson</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="schedule_lesson_menu" action="le_schedule_lesson_action"/>
    </data>
</odoo>