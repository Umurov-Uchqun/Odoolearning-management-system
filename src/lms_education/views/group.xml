<odoo>
    <data>
        <record model="ir.ui.view" id="le_group_list">
            <field name="name">group list</field>
            <field name="model">le.group</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="course_id"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="le_group_form">
            <field name="name">group form</field>
            <field name="model">le.group</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name"/>
                    <field name="course_id"/>
                    <notebook>
                        <page string="Group student">
                            <field name="group_student_ids">
                                <list>
                                    <field name="student_id"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                        <page string="schedule_table">
                            <field name="schedule_table_ids">
                                <list editable="top">
                                    <field name="name"/>
                                    <field name="teacher_id"/>
                                    <field name="start_date"/>
                                    <field name="weekday_ids" widget="many2many_tags"/>
                                    <field name="lesson_start_time" widget="float_time"/>
                                    <field name="lesson_end_time" widget="float_time"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="le_group_action" model="ir.actions.act_window">
            <field name="name">group</field>
            <field name="res_model">le.group</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="group_menu" action="le_group_action"/>
    </data>
</odoo>