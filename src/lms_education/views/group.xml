<odoo>
    <data>
        <record model="ir.ui.view" id="le_group_list">
            <field name="name">group list</field>
            <field name="model">le.group</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="le_group_form">
            <field name="name">group form</field>
            <field name="model">le.group</field>
            <field name="arch" type="xml">
                <form>
                    <field name="name"/>
                </form>
            </field>
        </record>

        <record id="le_group_action" model="ir.actions.act_window">
            <field name="name">group</field>
            <field name="res_model">le.group</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="group_menu" action="le_group_action"/>
    </data>
</odoo>